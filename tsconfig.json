{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"],
      "@entity/*": ["src/entity/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@datasource" : ["src/datasource.js"]

    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
